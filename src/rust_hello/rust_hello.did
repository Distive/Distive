type comment_input = record {
    channel_id: text;
    message: text;
    user_id: text;
    comment_id: opt text;
}

type get_comment_param = record {
    channel_id: text;
    comment_id: text;
}

type get_thread_param = record {
    limit: nat;
    cursor: opt text;
}

service : {
    "greet": (text) -> (text) query;
    "upsert_comment": (input: comment_input) -> (text);
    "get_comment": (param: get_comment_param) -> (text);
    "get_thread": (param: get_thread_param);
}
